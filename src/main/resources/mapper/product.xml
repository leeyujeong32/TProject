<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="product"> <!-- mapper파일의 이름 -->
	<select id="selectList" resultType="product.ProductVo" parameterType="product.ProductVo">
		SELECT * FROM fulltable
		ORDER BY 
		<choose>
			<when test="orderCond == 'watchcount_desc'">watchcount DESC</when>
			<when test="orderCond == 'endtime_asc'">endtime ASC</when>
			<when test="orderCond == 'price_asc'">price ASC</when>
			<when test="orderCond == 'price_desc'">price DESC</when>
			<otherwise>start_time DESC</otherwise>
		</choose>
	</select>
</mapper>