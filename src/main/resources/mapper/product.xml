<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="product"> <!-- mapper파일의 이름 -->
	<select id="selectList" resultType="product.ProductVo" parameterType="product.ProductVo">
		SELECT * FROM fulltable
		<choose>
			<when test="primary_category != ''">WHERE primary_category = #{primary_category}</when>
			<when test="primary_category = ''"></when>
		</choose>
		ORDER BY 
		<choose>
			<when test="orderCond == 'watchcount_desc'">watchcount DESC</when>
			<when test="orderCond == 'endtime_asc'">endtime ASC</when>
			<when test="orderCond == 'price_asc'">price ASC</when>
			<when test="orderCond == 'price_desc'">price DESC</when>
			<when test="orderCond == 'start_time_desc'">start_time DESC</when>
			<otherwise>watchcount DESC</otherwise>
		</choose>
	</select>
	 
	<select id="count" resultType="int" parameterType="product.ProductVo">
		SELECT COUNT(*) FROM fulltable
	</select>

	<select id="selectOne" parameterType="String" resultType="product.ProductVo">
		SELECT * FROM fulltable WHERE productid = #{xxx}		
	</select>
	
	<delete id="delete" parameterType="int">
		DELETE FROM fulltable WHERE timeleft < 1
	</delete>
</mapper>